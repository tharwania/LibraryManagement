        <dt>
            @Html.DisplayNameFor(model => model.CheckInOutStatus)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CheckInOutStatus)
        </dd>
        @if (Model.CurrentAssignedPerson != null)
        {
        <dt>
            @Html.DisplayNameFor(model => model.CurrentAssignedPerson)
        </dt>
        <dd>
            @Html.Partial("_AssignedPersonView", Model.CurrentAssignedPerson)
        </dd>
        }
    </dl>
